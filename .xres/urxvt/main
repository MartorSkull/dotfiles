#define myfont DejaVu Sans Mono for Powerline
#define myfontsize 10

URxvt.font:                   xft: myfont:size=myfontsize:Book
URxvt.boldFont:               xft: myfont:size=myfontsize:bold
URxvt.italicFont              xft: myfont:size=myfontsize:italic
URxvt.boldItalicFont          xft: myfont:size=myfontsize:bold:italic
URxvt.letterSpace:            -1

URxvt*loginShell:             false

URxvt.internalBorder:         6
URxvt.externalBorder:         0

URxvt*print-pipe:             cat > $HOME/$(echo urxvt.dump.$(date +'%Y%M%d%H%m%S'))
URxvt.iconFile:               /usr/share/icons/elementary-xfce/apps/48/terminal.png

URxvt*perl-ext-common:        default,matcher,fullscreen
URxvt*perl-ext:

URxvt.keysym.F11:             perl:fullscreen:switch

urxvt*url-launcher:           firefox
URxvt.matcher.button:         1

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.iso14755:               false
URxvt.iso14755_52:            false
urxvt.keysym.Home:            \033[1~
urxvt.keysym.End:             \033[4~